{
  "version": 2,
  "functions": {
    "api/**/*.py": {
      "runtime": "python3.10",
      "memory": 512,
      "maxDuration": 10,
      "regions": ["iad1"]
    }
  },
  "builds": [
    { "src": "api/index.py", "use": "@vercel/python" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/", "dest": "/client/index.html" }
  ]
}
